{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "paths": {
      "@ct/core/*": ["../core/src/*"],
      "@persistence/*": ["./src/persistence/*"]
    },
  },
  "exclude": ["node_modules"]
}
